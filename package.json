{
  "name": "doodle",
  "version": "1.0.0",
  "description": "Canvas doodling JavaScript with an AngularJS directive for delivery",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jzacsh/doodle"
  },
  "author": "Jonathan Zacsh",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jzacsh/doodle/issues"
  },
  "homepage": "https://github.com/jzacsh/doodle",
  "dependencies": {
    "angular": "^1.3.10",
    "browserify": "^8.1.1",
    "browserify-shim": "^3.8.2",
    "ncp": "^1.0.1"
  },
  "config": {
    "temp": "tmp",
    "source": "src"
  },
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "clean": "rm -rf $npm_package_config_temp && mkdir $npm_package_config_temp",
    "browserify": "browserify $npm_package_config_source/doodle_app.js > $npm_package_config_temp/app.js",
    "mvassets": "cp -rf $npm_package_config_source/assets/* $npm_package_config_temp/",
    "version": "git show-ref --hash heads/master | tee | cut -c 1-10",
    "bugurl": "echo \"$npm_package_homepage/issues/new?body=to+reproduce:&title=wrt+$(npm run -s version)\"",
    "tagbuild": "sed -i \"s|TAG_TEMPLATE|`npm run -s version`|\" $npm_package_config_temp/index.html",

    "build": "npm run browserify && npm run mvassets && npm run tagbuild",
    "rebuild": "npm run clean && npm run build",
    "start": "cd $npm_package_config_temp && python -m SimpleHTTPServer 8000",
    "restart": "npm run rebuild && npm run start"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "angular": "angular"
  }
}
